<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded">
    <LinearLayout
        android:id="@+id/quickmenu_gridview_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="1">
        <GridView
            android:id="@+id/grid_view_quickmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="80dp"
            android:gravity="center"
            android:horizontalSpacing="0dp"
            android:layout_weight="0.5"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_weight="0.6">
            <Button
                android:id="@+id/button_quickmenu_previous"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTransparent"
                android:textColor="@drawable/color_quickmenu"
                android:gravity="center"
                android:textSize="50dp" />
            <TextView
                android:id="@+id/page_quick_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.8"
                android:gravity="center"
                android:textSize="20dp"
                android:text="1/3" />
            <Button
                android:id="@+id/button_quickmenu_next"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTransparent"
                android:textColor="@drawable/color_quickmenu"
                android:gravity="center"
                android:textSize="50dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>