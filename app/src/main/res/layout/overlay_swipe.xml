<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/swipe_up_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_arrow_up"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/swipe_left_icon" />
        <ImageButton
            android:id="@+id/swipe_left_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_arrow_left"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackground"
            android:layout_below="@+id/swipe_up_icon"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/swipe_center_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:layout_below="@+id/swipe_up_icon"
            android:layout_toEndOf="@+id/swipe_left_icon" />
        <ImageButton
            android:id="@+id/swipe_right_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="4dp"
            android:src="@mipmap/ic_arrow_right"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackground"
            android:layout_below="@+id/swipe_up_icon"
            android:layout_toRightOf="@+id/swipe_center_icon"
            />
        <ImageButton
            android:id="@+id/swipe_down_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="2dp"
            android:src="@mipmap/ic_arrow_down"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackground"
            android:layout_below="@+id/swipe_left_icon"
            android:layout_toEndOf="@+id/swipe_left_icon" />
    </RelativeLayout>
</LinearLayout>