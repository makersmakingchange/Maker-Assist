<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="98dp"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/textView_secondary_background"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:src="@drawable/circle_white" />
                <TextView
                    android:id="@+id/textView_secondary_icon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignBottom="@+id/textView_secondary_background"
                    android:layout_alignEnd="@+id/textView_secondary_background"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@drawable/color_quickmenu"
                    android:textSize="32dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView_secondary_feature"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_secondary_icon"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold" />
        </RelativeLayout>
</FrameLayout>